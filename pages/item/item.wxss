
@import "../../templates/numberCalculate1/numberCalculate.wxss";
@import "../../templates/numberCalculate2/numberCalculate.wxss";

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 10px;
}

.infoContainer {
  align-self: stretch;
  margin-bottom: 7px;
}

.oneLine {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding-left: 20px;
  padding-right: 20px;
  padding-top: 5px;
  padding-bottom: 5px;
}

.aline {
  background-color: grey;
  height: 1px;
  margin-left: 15px;
  margin-right: 15px;
}

.title {
  flex: 30%;
}

.content {
  flex: 60%;
}

.saveButton {
  margin-left: 20px;
  margin-right: 20px;
  margin-top: 5px;
  margin-bottom: 10px;
  align-self: stretch;
  background-color: rgb(1, 189, 1);
  color: white;
}

.tabbar {
  align-self: stretch;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.tabItemSelected {
  flex: 1;
  background-color: white;
  color: black;
  z-index: 2;
}

.tabItemSelected::after {
  border-color: black;
  border-bottom: 0;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
}

.tabItemUnSelected {
  flex: 1;
  background-color: lightgrey;
  color: black;
}

.tabItemUnSelected::after {
  border-bottom-color: black;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
}

.longLine {
  margin-top: -2px;
  margin-left: -40px;
  margin-right: -40px;
  height: 2px;
  align-self: stretch;
  background-color: grey;
  z-index: 1;
  margin-bottom: 20px;
}