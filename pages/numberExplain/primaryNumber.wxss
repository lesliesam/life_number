.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 10px;
  padding-left: 15px;
  padding-right: 15px;
}

.explainContainer {
  margin-top: 10px;
  display: flex;
  align-self: stretch;
  align-items: center;
  flex-wrap: wrap;
}

.explainBlock {
  margin: 2px;
}

.positiveBlock {
  background-color: rgb(0, 158, 79);
  color: white;
}

.nagetiveBlock {
  background-color: rgb(255, 0, 64);
  color: white;
}

.stickAtBottom {
  position: fixed;
  bottom: 0px;
  left: 0;
  right: 0;
  background-color: lightgray;
}

.addButton {
  margin-left: 15px;
  margin-right: 15px;
  margin-top: 10px;
  margin-bottom: 10px;
  background-color: rgb(1, 189, 1);
  color: white;
}