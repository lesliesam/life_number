.input {
  border: thin solid rgb(184, 183, 183);
  margin: 10px;
}

.oneLine {
  display: flex;
  flex-direction: row;
  align-self: flex-start;
  align-items: center;
  justify-content: space-between;
  padding-left: 20px;
  padding-right: 20px;
  padding-top: 5px;
  padding-bottom: 5px;
}


.content {
  margin-left: 20px;
}

.addButton {
  margin-left: 15px;
  margin-right: 15px;
  align-self: stretch;
  background-color: rgb(1, 189, 1);
  color: white;
}

.positiveType {
  background-color: rgb(0, 158, 79);
  color: white;
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 5px;
  padding-bottom: 5px;
  border-radius: 5px;
}

.negativeType {
  background-color: rgb(255, 0, 64);
  color: white;
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 5px;
  padding-bottom: 5px;
  border-radius: 5px;
}